<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_margin_xlarge"
    android:layout_marginBottom="@dimen/activity_margin_xlarge"
    android:layout_marginLeft="@dimen/activity_margin_large"
    android:layout_marginRight="@dimen/activity_margin_large"
    android:orientation="vertical"
    android:gravity="center_horizontal|bottom">

    <Button
        android:id="@+id/get_started"
        style="@style/Button.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_started"/>

    <Button
        android:id="@+id/sign_in"
        style="@style/Button.Large.Transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_spacing"
        android:text="@string/sign_in"/>

</LinearLayout>
